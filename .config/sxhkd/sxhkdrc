#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# program launcher
super + a
	rofi -show drun

super + w
  . ~/.config/nitrogen/wallpaper

# volume
XF86AudioLowerVolume
  amixer set Master 5%-
XF86AudioRaiseVolume
  amixer set Master 5%+
XF86AudioMute
  amixer set Master toggle


Print
  scrot -s --format jpg -o - | xclip -selection clipboard -target image/png

ctrl + Print
  scrot --format jpg -o - | xclip -selection clipboard -target image/png

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd && \
  ~/.config/polybar/launch.sh & disown && \
  bspc wm -r

#
# bspwm hotkeys
#

super + z
  bspc node @/ -R 90

# kill bspwm
super + shift + q
  bspc quit

# kill window
super + q
  bspc node -c


# alternate between the tiled and monocle layout
#super + f
#	bspc desktop -l next

#
# state/flags
#

#super + {t, s, f}
#  bspc node -t {tiled,floating,fullscreen}


# cycle layouts
super + Tab
  bspc node -t {tiled, fullscreen, floating}

super + f
  bspc config single_monocle {false, true}

